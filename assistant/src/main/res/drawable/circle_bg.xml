    <item android:state_selected="false">
        <shape android:shape="rectangle">
            <corners android:radius="20dp" />
            <solid android:color="@color/lighter_gray" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="20dp" />
            <solid android:color="@color/lighter_gray" />
        </shape>
    </item>

</selector>